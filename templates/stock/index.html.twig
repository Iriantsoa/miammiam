{% extends 'base.html.twig' %}

{% block title %}Stock index
{% endblock %}

{% block body %}
	<h1>Stock index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Ingredient Id</th>
				<th>Ingredient Name</th>
				<th>Entree</th>
				<th>Sortie</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for stock in stocks %}
				<tr>
					<td>{{ stock.id }}</td>
					<td>{{ stock.ingredient.id }}</td>
					<td>{{ stock.ingredient.nom }}</td>
					<td>{{ stock.entree }}</td>
					<td>{{ stock.sortie }}</td>
					<td>
						<a href="{{ path('app_stock_show', {'id': stock.id}) }}">show</a>
						<a href="{{ path('app_stock_edit', {'id': stock.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_stock_new') }}">Create new</a>
{% endblock %}
